<?xml version="1.0"?>
<ruleset name="Coding Style Check">
    <description>Coding Style Check</description>

    <file>./src</file>
    <file>./tests</file>

    <exclude-pattern>*/vendor/*</exclude-pattern>

    <arg name="colors"/>
    <arg value="p"/>

    <ini name="memory_limit" value="128M"/>
    <rule ref="PSR2"/>
</ruleset>